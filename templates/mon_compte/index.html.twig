{% extends 'base.html.twig' %}

{% block title %}Hello MonCompteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper mt-5">

	<div class="container mt-5">
		{% if OperationsBancaires is empty%}
			<h2 class="text-center text-primary fs-1">pas d'operation !<h1/>
			<img src='https://t4.ftcdn.net/jpg/02/81/17/19/360_F_281171941_ptD3zBY8lVTbx1gOdUPI0UIFmRTl8doo.jpg' class='w-60 h-60' alt="photo"/>
		{% else %}
		<table class="table table-hover">
			<thead>
				<tr style="text-align:center">
					<th scope="col">Nombre Total des opérations</th>
                    <th scope="col">Nombre des opérations validées</th>
					<th scope="col">Nombre des opérations non validées</th>
				</tr>
			</thead>
			<tbody>
			<tr class="table-secondary center" style="text-align:center; font-weight:700">
			<td>
				{{ OperationsBancaires | length }} 
				<td>{% set count = 0 %}
				{% for OperationsBancaires in OperationsBancaires %}
				{% if OperationsBancaires.placeName is not empty %}
					{% set count = count + 1 %}
				{% endif %}
				{% endfor %}
				{{ count }} 
			</td>
		<td>{{countNonValidé}} </td>
				</tr>
			</tbody>
		</table>				
	{% endif %}
		</div>
	</div>
{% endblock %}
